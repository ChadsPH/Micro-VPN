<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<androidx.appcompat.widget.Toolbar
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		android:id="@+id/toolbar_main"
		android:background="?colorPrimary"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:minHeight="?actionBarSize"
		android:elevation="6.0dip"
		app:popupTheme="@style/ThemeOverlay.AppCompat"/>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<androidx.cardview.widget.CardView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/headerLayout1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10.0dip"
				android:layout_marginTop="10.0dip"
				android:layout_marginRight="10.0dip"
				app:cardCornerRadius="5.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Micro is a Free VPN and a professional VPN tool to browse the internet privately and securely with multiple protocol and tunneling technologies built into one app."/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="It works as an universal SSH, Proxy, SSL to encrypts your connection so  that you can surf the internet privately and securely."/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="It also helps you access blocked websites behind a firewall. Best part? You will be able to configure your own server and connect using this app."/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/headerLayout2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10.0dip"
				android:layout_marginTop="10.0dip"
				android:layout_marginRight="10.0dip"
				app:cardCornerRadius="5.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="About"/>

					<TextView
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="Developer Home"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="ChadDevz"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://www.facebook.com/adik016"/>

					<TextView
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="Credits"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="SocksHttp - SlipkHunter"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://github.com/sauceisgood/sockshttp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="ASDev"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://www.facebook.com/marcpelobello15"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="HiroDevz"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://m.facebook.com/HirooQt"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="John Cacanog"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://www.facebook.com/Kentjcacanog1121"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/headerLayout3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10.0dip"
				android:layout_marginTop="10.0dip"
				android:layout_marginRight="10.0dip"
				android:layout_marginBottom="10.0dip"
				app:cardCornerRadius="5.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Third Party Software"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="JSocks v1.0.1"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://jsocks.sourceforge.net"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="Trilead SSH-2 Build 217"/>

					<TextView
						android:autoLink="web"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="https://github.com/jenkinsci/trilead-ssh2"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

