<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<declare-styleable name="DataGraph">
		<attr name="dg_colorDown" format="color" />
		<attr name="dg_colorUp" format="color" />
		<attr name="dg_colorText" format="color" />
	</declare-styleable>
	
	<declare-styleable name="SVGImageView">
        <!-- Location of the SVG document. -->
        <attr name="svg" format="reference|string"/>
        <attr name="css" format="string"/>
    </declare-styleable>

	<attr name="mwhWaves" format="string|enum">
        <enum name="MultiWave" value="-1"/>
        <enum name="PairWave" value="-2"/>
    </attr>
    <attr name="mwhShape" format="enum">
        <enum name="Rect" value="0"/>
        <enum name="RoundRect" value="1"/>
        <enum name="Oval" value="2"/>
    </attr>
	
	<attr name="primaryTitleColor" format="color"/>
    <attr name="primaryDescriptionColor" format="color"/>
    <attr name="primaryDateColor" format="color"/>
    <attr name="primaryBackgroundColor" format="color"/>
    <attr name="primaryCardBackgroundColor" format="color"/>
    
	<attr name="controlBackground" format="reference" />
	
    <declare-styleable name="MultiWaveHeader">
        <attr name="mwhWaveHeight" format="dimension"/>
        <attr name="mwhStartColor" format="color"/>
        <attr name="mwhCloseColor" format="color"/>
        <attr name="mwhIsRunning" format="boolean"/>
        <attr name="mwhEnableFullScreen" format="boolean"/>
        <attr name="mwhColorAlpha" format="fraction|float"/>
        <attr name="mwhProgress" format="fraction|float"/>
        <attr name="mwhVelocity" format="fraction|float"/>
        <attr name="mwhGradientAngle" format="integer"/>
        <attr name="mwhCornerRadius" format="dimension"/>
        <attr name="mwhWaves"/>
        <attr name="mwhShape"/>
    </declare-styleable>
     
</resources>
